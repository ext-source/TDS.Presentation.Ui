@model IEnumerable<TDS.Presentation.Ui.Models.DeliveryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurrentProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentProvider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentProduct.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentProvider.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DeliveryEntityId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DeliveryEntityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DeliveryEntityId })
            </td>
        </tr>
    }

</table>
